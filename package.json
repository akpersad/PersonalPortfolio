{
  "name": "personal-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "test:a11y": "playwright test --config=playwright.config.ts",
    "test:a11y:ci": "CI=true playwright test --config=playwright.config.ts --reporter=list",
    "test:a11y:ui": "playwright test --config=playwright.config.ts --ui",
    "test:a11y:html": "playwright test --config=playwright.config.ts --reporter=html",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html --preset desktop",
    "lighthouse:ci": "lhci autorun",
    "a11y:audit": "npm run lighthouse && npm run test:a11y",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build",
    "bundle:monitor": "node scripts/bundle-monitor.mjs",
    "bundle:check": "npm run build && npm run bundle:monitor"
  },
  "dependencies": {
    "@react-email/render": "^1.3.0",
    "gtag": "^1.0.1",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^6.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/react": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-axe": "^3.1.0",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "lighthouse": "^12.8.2",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
